@model ClinicManagementSystem.Models.AllDrugModelVM
@{
    ViewData["Title"] = "All Drugs";
    Layout = "_Layout";
}

<div id="msgDiv" style="margin-top:15px">
    @{
        if (TempData["msg"] != null)
        {
            <div class="alert alert-success" onclick="$(this).slideUp(500);" onshow="$(this).slideUp(800);" role="alert">@TempData["msg"]</div>
        }
    }
</div>



<div class="card shadow mt-4">
    <div class="card-header">
        <div class="row">
            <div class="col-md-2" style="margin-top:10px; margin-bottom:5px; color:cornflowerblue; font-weight:bold">All Drugs</div>
            <div class="col-md-8"></div>
            <div class="col-md-2" style="margin-top:4px">
                <a asp-action="NewDrug" asp-controller="Drug" method="get">
                    <input type="submit" value="New Drug" class="btn btn-primary btn-sm" style="margin-left:55px; background:linear-gradient(-135deg, #71b7e6, #9b59b6); border:none" />
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="box-body with-border">
            <table id="allDrugsTable" class="table table-hover">
                <thead>
                    <tr>
                        <th style="font-weight:bold">ID</th>
                        <th style="font-weight:bold">Drug Name</th>
                        <th style="font-weight:bold">Description</th>
                        <th style="font-weight:bold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model.allDrugModelsList != null && Model.allDrugModelsList.Count > 0)
                        {
                            foreach (var item in Model.allDrugModelsList)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.DrugName</td>
                                    <td>@item.GenericName</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-md-4"></div>
                                            <div class="col-md-2"><i class='bx bxs-edit-alt'></i></div>
                                            <div class="col-md-2"><i class='bx bxs-message-square-x'></i></div>
                                            <div class="col-md-4">
                                                
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    }                    
                </tbody>
            </table>
        </div>
    </div>   
    <div class="modal fade" id="modelWindow" role="dialog">
        <div class="modal-dialog modal-sm vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Heading</h4>
                </div>
                <div class="modal-body">
                    Body text here
                </div>
                <div class="modal-footer">
                    
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#allDrugsTable').DataTable();        
    });
</script>