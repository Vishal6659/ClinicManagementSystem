@model ClinicManagementSystem.Models.NewDrug

@{
    ViewData["Title"] = "Edit Drug";
    Layout = "_Layout";
}

<div style="margin-top:20px">
    @{
        if (TempData["msg"] != null)
        {
            if (TempData.ContainsKey("Drug not Edited Succesfully"))
            {
                <div class="alert alert-danger" id="msgDiv" role="alert">@TempData["msg"]</div>
            }
        }
    }
</div>


@{
    string DrugName = string.Empty;
    string GenericName = string.Empty;
    string Note = string.Empty;
    if (Model != null)
    {
        DrugName = Model.DrugName;
        GenericName = Model.GenericName;
        Note = Model.Note;
    }
}

<div class="card shadow" style="margin-top:20px">
    <form asp-action="NewDrug" asp-controller="Drug" method="post">
        <div class="card-header">
            <div class="row">
                <div class="col-md-2" style="margin-top:10px; margin-bottom:5px; color:cornflowerblue; font-weight:bold">Edit Drug</div>
                <div class="col-md-10"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="row" style="margin-bottom:20px">
                <div class="col-md-4">
                    <label class="control-label"><span style="color:red">*</span>Drug Name @*<span asp-validation-for="Firstame" class="clearfix text-danger" style="font-size: 12px"></span>*@</label>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="DrugName" value="@DrugName" class="form-control" autocomplete="off" placeholder="First Name" />
                </div>
            </div>
            <div class="row" style="margin-bottom:20px">
                <div class="col-md-4">
                    <label class="control-label"><span style="color:red">*</span>Generic Name @*<span asp-validation-for="Firstame" class="clearfix text-danger" style="font-size: 12px"></span>*@</label>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="GenericName" value="@GenericName" class="form-control" autocomplete="off" placeholder="First Name" />
                </div>
            </div>
            <div class="row" style="margin-bottom:20px">
                <div class="col-md-4">
                    <label class="control-label"><span style="color:red">*</span>Note @*<span asp-validation-for="Firstame" class="clearfix text-danger" style="font-size: 12px"></span>*@</label>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="Note" value="@Note" class="form-control" autocomplete="off" placeholder="First Name" />
                </div>
            </div>
        </div>
        <div class="row" style="margin-bottom:20px">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <input type="submit" value="Submit" class="btn btn-primary btn-sm" style="padding-left:60px; padding-right:60px; margin-left:170px; background:linear-gradient(-135deg, #71b7e6, #9b59b6); border:none" />
            </div>
            <div class="col-md-3"></div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#msgDiv").fadeTo(2000, 500).slideUp(500, function () {
            $("#msgDiv").slideUp(500);
        });
        $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#success-alert").slideUp(500);
        });
    });
</script>