@{
    ViewData["Title"] = "New Prescriptions";
    Layout = "_Layout";
}

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card shadow" style="margin-top:20px">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6" style="margin-top:10px; margin-bottom:5px; color:cornflowerblue; font-weight:bold">Patient Information</div>
                    <div class="col-md-6"></div>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-2">
                        <label class="control-label" style="margin-top:8px">Patient: </label>
                    </div>
                    <div class="col-md-10">                        
                        <select class="form-select" id="selectPatient">
                            <option value="Unknown">Select Patient ...</option>
                        </select>
                    </div>
                </div>
                <div class="row"> 
                    <img class="mt-3" style="width:400px; margin-left:45px" alt="Sign" src="@Url.Content("~/Images/user.png")" />
                </div>
                <button class="btn btn-primary mt-3" style="background:linear-gradient(-135deg, #71b7e6, #9b59b6); border:none">Add Prescription</button>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card shadow" style="margin-top:20px">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6" style="margin-top:10px; margin-bottom:5px; color:cornflowerblue; font-weight:bold">Drug List</div>
                    <div class="col-md-6"></div>
                </div>
            </div>
            <div class="card-body">
                <div class="DrugDivMain">
                    <div class="internalDrugDiv">
                        <div class="row mb-4">
                            <div class="col-md 3">
                                <input type="text" class="form-control" placeholder="Type" />
                            </div>
                            <div class="col-md 6">
                                <select class="form-select">
                                    <option>Select Drug...</option>
                                </select>
                            </div>
                            <div class="col-md 3">
                                <input type="text" class="form-control" placeholder="Mg/Ml" />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Dose" />
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Duration" />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <input type="text" class="form-control" placeholder="Advice/Comments" />
                            </div>
                        </div>
                        <hr />
                    </div>
                </div>                             
                <button class="btn btn-primary" id="addDrugBtn" style="background:linear-gradient(-135deg, #71b7e6, #9b59b6); border:none">Add Drug</button>
            </div>
        </div>
        <div class="card shadow mt-5">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6" style="margin-top:10px; margin-bottom:5px; color:cornflowerblue; font-weight:bold">Tests List</div>
                    <div class="col-md-6"></div>
                </div>
            </div>
            <div class="card-body">
                <div class="testDivMain">
                    <div class="testDivInternal">
                        <div class="row">
                            <div class="col-md-6">
                                <select class="form-select">
                                    <option>Select Test...</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Description" />
                            </div>
                        </div>
                        <hr />
                    </div>                    
                </div>                               
                <button class="btn btn-primary" id="addTestBtn" style="background:linear-gradient(-135deg, #71b7e6, #9b59b6); border:none">Add Test</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $("#addDrugBtn").click(function () {
            var html = `
                     <div class="internalDrugDiv">
                    <div class="row mb-4">
                        <div class="col-md 3">
                            <input type="text" class="form-control" placeholder="Type" />
                        </div>
                        <div class="col-md 6">
                            <select class="form-select">
                                <option>Select Drug...</option>
                            </select>
                        </div>
                        <div class="col-md 3">
                            <input type="text" class="form-control" placeholder="Mg/Ml" />
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Dose" />
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Duration" />
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <input type="text" class="form-control" placeholder="Advice/Comments" />
                        </div>
                    </div>
                    <hr />
                </div> 
            `;
            $(".DrugDivMain").append(html);
        });

        $("#addTestBtn").click(function(){
            var html = `
                         <div class="testDivInternal">
                            <div class="row">
                                <div class="col-md-6">
                                    <select class="form-select">
                                        <option>Select Test...</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" placeholder="Description" />
                                </div>
                            </div>
                            <hr />
                        </div>
            `;
            $(".testDivMain").append(html);
        });
    });
</script>
