<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClinicManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClinicManagementSystem.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js">
    </script>
</head>
<body>
   
    @{
    string firstName = string.Empty;
    string lastName = string.Empty;
    string fullName = string.Empty;
    string mobileNumber = string.Empty;
    string email = string.Empty;
    string address = string.Empty;

    GetSessionModel sessionModel = Context.Session.GetObjectFromJson<GetSessionModel>(SessionVariables.SessionData);
    if (sessionModel != null)
    {
    firstName = sessionModel.Firstname;
    lastName = sessionModel.Lastname;
    fullName = Convert.ToString(firstName.Concat(lastName));
    mobileNumber = Convert.ToString(sessionModel.Mobilenumber);
    email = sessionModel.Email;
    address = sessionModel.Address;
    }
    }
   
    
    <nav class="navbar">
        <div class="col-md-11"></div>
        <div class="col-md-1">
            <span>@firstName</span>
            <i class='bx bx-user userlogo' id="sideUserInfoModal"></i>
        </div>
    </nav>
    <div class="container-fluid row">
        <div class="col-md-2">
            <nav class="sidebar" id="sideBar">
                <header>
                    <div class="image-text">
                        <span class="image">
                            <img src="@Url.Content("~/Images/DocLogo.jpg")" style="width:50px" alt="Logo">
                        </span>
                        <div class="text header-text">
                            <span class="name">Clinic Management</span>
                            <span class="profession">System</span>
                        </div>
                    </div>
                </header>

                <div class="menu-bar">
                    <div class="menu">
                        <ul class="nav navbar-nav">
                            <li class="search-box">
                                <i class='bx bx-search-alt-2 icons' style="margin-left:10px"></i>&nbsp;&nbsp;
                                <input type="search" placeholder="Search ..." />
                            </li>
                        </ul>
                        <ul class="nav navbar-nav" style="margin-left:20px;">
                            <li class="nav-link">
                                <a asp-controller="Home" asp-action="Index">
                                    <i class='bx bx-home-alt icons' style="margin-left:10px;"></i>&nbsp;&nbsp;
                                    <span class="text nav-text">Dashboard</span>
                                </a>
                            </li>
                            <li class="nav-link">
                                <a asp-controller="Patient" asp-action="AllPatients">
                                    <i class='bx bx-plus-medical' style="margin-left:10px;"></i>&nbsp;&nbsp;
                                    <span class="text nav-text">Patients</span>
                                </a>
                            </li>
                            <li class="nav-link">
                                <a asp-controller="Appointment" asp-action="AllAppointments">
                                    <i class='bx bx-file' style="margin-left:10px;"></i>&nbsp;&nbsp;
                                    <span class="text nav-text">Appointment</span>
                                </a>
                            </li>
                            <li class="nav-link">
                                <a asp-controller="Prescription" asp-action="AllPrescriptions">
                                    <i class='bx bx-envelope' style="margin-left:10px;"></i>&nbsp;&nbsp;
                                    <span class="text nav-text">Prescription</span>
                                </a>
                            </li>
                            <li class="nav-link">
                                <a asp-controller="Drug" asp-action="AllDrugs">
                                    <i class='bx bxs-capsule' style="margin-left:10px;"></i>&nbsp;&nbsp;
                                    <span class="text nav-text">Drugs</span>
                                </a>
                            </li>
                            <li class="nav-link">
                                <a asp-controller="Test" asp-action="AllTests">
                                    <i class='bx bx-test-tube' style="margin-left:10px;"></i>&nbsp;&nbsp;
                                    <span class="text nav-text">Tests</span>
                                </a>
                            </li>
                            <li class="nav-link">
                                <a asp-controller="Billing" asp-action="AllBillings">
                                    <i class='bx bx-wallet' style="margin-left:10px;"></i>&nbsp;&nbsp;
                                    <span class="text nav-text">Billing</span>
                                </a>
                            </li>
                            @* <li class="nav-link">
                            <a href="#">
                            <i class='bx bx-cog' style="margin-left:10px;"></i>&nbsp;&nbsp;
                            <span class="text nav-text">Setting</span>
                            </a>
                            </li>*@
                        </ul>
                    </div>
                    <div class="bottom-content">
                        <ul class="nav navbar-nav" style="margin-left:10px;">
                            <li class="nav-link">
                                <a asp-action="Login" asp-controller="Home">
                                    <i class='bx bx-log-out icons'></i>&nbsp;&nbsp;
                                    <span class="text nav-text">Logout</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </nav>
        </div>
        <div class="pb-3 col-md-10">
            @RenderBody()
        </div>
    </div>

    @*<footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - ClinicManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script type="text/javascript">
    var dropdown = document.getElementsByClassName("dropdown-btn");
    var i;

    for (i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var dropdownContent = this.nextElementSibling;
            if (dropdownContent.style.display === "block") {
                dropdownContent.style.display = "none";
            } else {
                dropdownContent.style.display = "block";
            }
        });
    }
</script>
